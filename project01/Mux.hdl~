/** 
 * Multiplexor.  If sel=0 then out = a else out = b.
 */

CHIP Mux {

    IN  a, b, sel;
    OUT out;

    PARTS:
    // My implementation.  As of this comment I don't have a valid "Or" so 
    // you need
    Not(in=sel, out=NotSel);
    And(a=a, b=NotSel, out=AndA);
    And(a=b, b=sel, out=AndB);
    Or(a=AndA, b=AndB, out=out);
}
